{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "UniversityDB": "Server=MARTIN;Database=UniversityDB;Trusted_Connection=True;TrustServerCertificate=true;"
  },

  // Se esta haciendo una Configuracion General para todo el Proyecto sin tener que estar escribiendolo en el codigo
  "JsonWebTokenKeys": {                     //Son las propiedades de JwtSettings.cs
    "ValidateIssuerSigningKey": true,       //  
    "IssuerSiningKey": "",                  // Aqui se añade una clave que se va a usar de firma
    "ValidateIssuer": true,
    "ValidIssuer": "https://",              //Aqui va la ruta donde tenemos nuestra aplicacion
    "ValidateAudience": true,               // va a ser para validar a quien esta solicitando
    "ValidAudience": "https://",            //Tambien va a la ruta donde tenemos la aplicacion
    "RequireExpirationTime": true,          //Que tenga obligatoriamente una fecha de expiración
    "ValidateLifetime":  true               //
  }

}
  